<% @car_model.errors.full_messages.each do |message| %>
	<p><%= message %></p>
<% end %>

<%= form_with model: @car_model, local: true do |f|%>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :year %>
		<%= f.number_field :year %>
	</div>
	<div class="field">
		<%= f.label :motorization %>
		<%= f.text_field :motorization %>
	</div>
	<div class="field">
		<%= f.label :fuel_type %>
		<%= f.text_field :fuel_type %>
	</div>
	<div class="field">
		<%= f.label :manufacturer_id %>
		<%= f.collection_select :manufacturer_id, @manufacturers, :id, :name %>
	</div>
	<div class="field">
		<%= f.label :car_category_id %>
		<%= f.collection_select :car_category_id, @car_categories, :id, :name %>
	</div>

	<button class="button-enviar-form" type="submit">Enviar</button>
<% end %>
