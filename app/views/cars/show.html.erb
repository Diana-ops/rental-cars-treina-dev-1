<h3 class="link-to-back"><%= link_to 'Voltar', cars_path %></h3>

<div class="manufacturers-div">
	<h2 class="title-info-models">Informações do Carro</h2>
	<div class="info-cars">
		<h4>Placa: </h4>
			<p><%= @car.license_plate %></p>
		<h4>Cor: </h4>
			<p><%= @car.color %></p>
		<h4>Modelo: </h4>
			<p><%= link_to @car.car_model.name, car_model_path(id: @car.car_model.id) %></p>
		<h4>Quilometragem: </h4> 
			<p><%= @car.mileage %></p>
		<h4>Filial: </h4>
			<p><%= link_to @car.subsidiary.name, subsidiary_path(id: @car.subsidiary.id) %></p>
	</div>

	<div class="buttons-manufacturer">
		<p class="link-editar"><%= link_to 'Editar', edit_car_path(@car)%></p>
		<p class="link-excluir"><%= link_to 'Excluir', car_path(@car), method: :delete%></p>
	</div>
</div>
