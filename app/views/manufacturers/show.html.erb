<h3 class="link-to-back"><%= link_to 'Voltar', manufacturers_path %></h3>

<div class="manufacturers-div">

	<h1 class="title-manufacturer"><%= @manufacturer.name %></h1>

	<% if @user.admin? %>
		<div class="buttons-manufacturer">
			<p class="link-editar"><%= link_to 'Editar', edit_manufacturer_path(@manufacturer)%></p>
			<p class="link-excluir"><%= link_to 'Excluir', manufacturer_path(@manufacturer), :data => { :confirm => "Are you sure?" }, method: :delete %></p>
		</div>
	<% end %>
</div>
