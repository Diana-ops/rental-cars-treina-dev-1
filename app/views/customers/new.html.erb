<h1>Registre um novo cliente:</h1>

<% @customer.errors.full_messages.each do |message| %>
	<p><%= message %></p>
<% end %>

<%= form_with model: @customer, local: true do |f| %>
	<%= f.label :name, 'Nome' %>
	<%= f.text_field :name %>

	<%= f.label :name, 'Documento' %>
	<%= f.text_field :document %>

	<%= f.label :name, 'Email' %>
	<%= f.text_field :email %>

	<%= f.submit 'Enviar'%>
<% end %>
