<% if @customers.any? %>
	<table>
	  <thead>
	    <tr>
	      <th>Nome</th>
	      <th>Email</th>
	      <th>CPF</th>
	      <th></th>
	      <th></th>
	     </tr>
	  </thead>
	  <tbody>
	    <% @customers.each do |customer| %>
	      <tr id="customer-<%= customer.id %>">
		<td><%= customer.name %></td>
		<td><%= customer.email %></td>
		<td><%= customer.document %></td>
		<td><%= link_to 'Editar', edit_customer_path(customer), id: "edit-#{customer.id}" %></td>
		<td><%= link_to 'Excluir', customer_path(customer), method: :delete, id: "delete-#{customer.id}" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<p><%= "Nenhum resultado encontrado para: #{@q}" %></p>
<% end %>
